<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/home.css">

    <!-- font awesome cdn -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    
    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<!-- jquery cdn -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

</head>
<body>
    <!-- Heading -->
    <section id="head">
        <div id="heading">
            <h1 id="text-heading">
                <i class="fas fa-tasks"></i>
                ToDo Application
            </h1>
        </div>
    </section>

    <!-- form for taking input of task details -->
    <section id="tasks">
        <div id="task-submission">
            <form action="" method="post" class="flex flex-direction-column">
                <div class="form-group">
                    <div class="label">
                        <label for="description">Task Description</label>
                    </div>
                    <div>
                        <input class="form-control" type="text" name="description" placeholder="What do you need to do?">
                    </div>
                </div>
    
                <div class="row">
                    <div class="col">
                        <div class="label">
                            <label for="category">Category</label>
                        </div>
                        <div>
                            <select name="category" aria-label="Default select example" class="form-select">
                                <option selected>Choose a category</option>
                                <option value="1">Personal</option>
                                <option value="2">Work</option>
                                <option value="3">School</option>
                                <option value="4">Cleaning</option>
                                <option value="5">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="label">
                            <label for="date">Due Date</label>
                        </div>
                        <div>
                            <input class="form-control" type="date">
                        </div>
                    </div>
                </div>
                <div id="add-del-buttons">
                    <!-- add button -->
                    <div>
                        <button type="submit" id="add-task"><i class="fas fa-plus"></i> Add Task</button>
                    </div>
                    <!-- delete button -->
                    <div  id="del-task">
                        <a href=""><i class="far fa-trash-alt"></i> Delete Tasks</a>
                    </div>
                </div>
            </form>
        </div>

    </section>

    <script src="../assets/js/script.js"></script>
</body>
</html>